{
  "name": "lightrag-ts",
  "version": "0.1.0",
  "description": "TypeScript implementation of LightRAG - Simple and Fast Retrieval-Augmented Generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint src tests",
    "lint:fix": "oxlint src tests --fix",
    "type-check": "tsc --noEmit",
    "check": "concurrently -n test,lint,type -c blue,green,yellow \"npm run test\" \"npm run lint\" \"npm run type-check\"",
    "dev": "tsx watch src/index.ts",
    "example": "tsx examples/basic-usage.ts",
    "eval:gen": "tsx eval/generate_dataset.ts",
    "eval:run": "tsx eval/run_eval.ts",
    "eval:score": "cd eval && uv run score_eval.py",
    "eval": "npm run eval:gen && npm run eval:run && npm run eval:score"
  },
  "keywords": [
    "rag",
    "lightrag",
    "knowledge-graph",
    "llm",
    "openai",
    "retrieval",
    "embeddings"
  ],
  "license": "MIT",
  "dependencies": {
    "openai": "^4.70.0",
    "gpt-tokenizer": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0",
    "oxlint": "^0.15.0",
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
